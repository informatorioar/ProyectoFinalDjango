# -------------------------------------------------
# Django Core Settings
# -------------------------------------------------
# INSTRUCTIONS:
# 1. Copy this file to a new file named .env
# 2. Fill in the values for your production environment.
# 3. NEVER commit the .env file to version control.

# SECURITY WARNING: Use 'python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"' to generate a new key.
SECRET_KEY=your_super_secret_production_key_goes_here

# Set to False in production for security. Accepts: true, false, 1, 0, yes, no
DEBUG=False

# A comma-separated list of your production domain names, e.g., "www.myapp.com,myapp.com"
ALLOWED_HOSTS=.localhost,127.0.0.1,yourdomain.com


# -------------------------------------------------
# Database Settings (Production - MySQL)
# -------------------------------------------------
# These variables are used in prod.py for MySQL database configuration
DB_NAME=django_db
DB_USER=root
DB_PASSWORD=1234
DB_HOST=127.0.0.1
DB_PORT=3306

# Legacy variables (kept for compatibility, but not used in current prod.py)
MYSQL_ROOT_PASSWORD=1234
MYSQL_DATABASE=django_db


# -------------------------------------------------
# Email Settings (SMTP) - Not currently implemented
# -------------------------------------------------
# These are placeholder variables for future email configuration
# Currently not used in any settings file
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password_or_app_key


# -------------------------------------------------
# Development & Testing
# -------------------------------------------------
# Used for VS Code Django testing configuration
MANAGE_PY_PATH=./manage.py
DJANGO_SETTINGS_MODULE=core.settings.dev

# Legacy DATABASE_URL (not currently used)
DATABASE_URL=postgres://user:password@host:port/dbname

# -------------------------------------------------
# Static Files Configuration
# -------------------------------------------------
# Used in prod.py for static files storage configuration with Google Cloud Storage

STATIC_URL=/static/
STATIC_ROOT=staticfiles
# Google Cloud Storage settings
GS_BUCKET_NAME=your-gcs-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json
