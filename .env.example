# -------------------------------------------------
# Django Core Settings
# -------------------------------------------------
# INSTRUCTIONS:
# 1. Copy this file to a new file named .env
# 2. Fill in the values for your production environment.
# 3. NEVER commit the .env file to version control.

# SECURITY WARNING: Use 'python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"' to generate a new key.
SECRET_KEY=your_super_secret_production_key_goes_here

# Set to False in production for security.
DEBUG=False

# A comma-separated list of your production domain names, e.g., "www.myapp.com,myapp.com"
ALLOWED_HOSTS=.localhost,127.0.0.1,yourdomain.com


# -------------------------------------------------
# Database Settings (MySQL for Production)
# -------------------------------------------------
# Database name
DB_NAME=your_database_name

# Database user
DB_USER=your_database_user

# Database password
DB_PASSWORD=your_database_password

# Database host (optional, defaults to 127.0.0.1)
DB_HOST=127.0.0.1

# Database port (optional, defaults to 3306)
DB_PORT=3306